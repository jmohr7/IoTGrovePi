        </TextBlock>
        <TextBlock x:Name="textBlock2" HorizontalAlignment="Left" Margin="33,109,0,0" TextWrapping="Wrap" Text="Sound:" VerticalAlignment="Top"/>
        <TextBlock x:Name="textBlockSound" HorizontalAlignment="Left" Margin="139,109,0,0" TextWrapping="Wrap" Text="0" VerticalAlignment="Top" Foreground="#FF171C8B" FontWeight="Bold"/>
        <TextBlock x:Name="messageLabel" HorizontalAlignment="Left" Margin="33,179,0,0" TextWrapping="Wrap" Text="MESSAGE" VerticalAlignment="Top"/>
        <TextBlock x:Name="textBlockMessage" HorizontalAlignment="Left" Margin="33,234,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Height="71" Width="273" Foreground="#FF0000"/>

    </Grid>
</Page>
